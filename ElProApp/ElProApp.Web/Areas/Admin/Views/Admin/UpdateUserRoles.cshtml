@using ElProApp.Web.Models.Admin;
@model List<UserRolesViewModel>
@{
    ViewBag.Title = "Управление на роли";
}

<h2>Управление на роли</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Потребител</th>
            <th>Роли</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>
                    <form asp-action="UpdateUserRoles" method="post">
                        <input type="hidden" name="userId" value="@user.UserId" />

                        <select name="roles" class="form-select" multiple>
                            @foreach (var role in user.Roles)
                            {
                                if (user.RoleToRemove.Contains(role))
                                {
                                    <option value="@role" selected="selected">@role</option>
                                }
                                else
                                {
                                    <option value="@role">@role</option>
                                }
                            }
                            ption>
                            }
                        </select>
                        <input type="hidden" name="state" value="remove" />
                        <button type="submit" class="btn btn-success mt-2">премахни</button>
                    </form>
                </td>
                <td>
                    <form asp-action="UpdateUserRoles" method="post">
                        <input type="hidden" name="userId" value="@user.UserId" />

                        <select name="roles" class="form-select" multiple>
                            @foreach (var role in (List<string>)ViewBag.AllRoles)
                            {
                                if (user.Roles.Contains(role))
                                {
                                    <option value="@role" selected="selected">@role</option>
                                }
                                else
                                {
                                    <option value="@role">@role</option>
                                }
                            }
                            ption>
                            }
                        </select>
                        <input type="hidden" name="state" value="add" />
                        <button type="submit" class="btn btn-success mt-2">добави</button>                        
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
