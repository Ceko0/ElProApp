@using ElProApp.Web.Models.JobDone
@model JobDoneInputModel

<h1 class="mb-4">добави нова свършена работа</h1>

<form asp-action="Add" method="post">

    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label">Job Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DaysForJob" class="form-label"></label>
        <input asp-for="DaysForJob" class="form-control" />
        <span asp-validation-for="DaysForJob" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="JobId" class="form-label">Select Job</label>
        <select asp-for="JobId" class="form-control custom-select">
            <option value="">Select a job</option>
            @foreach (var job in Model.jobs)
            {
                <option value="@job.Id">@job.Name</option>
            }
        </select>
        <span asp-validation-for="JobId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="TeamId" class="form-label">Select Team</label>
        <select asp-for="TeamId" class="form-control custom-select">
            <option value="">Select a team</option>
            @foreach (var team in Model.teams)
            {
                <option value="@team.Id">@team.Name</option>
            }
        </select>
        <span asp-validation-for="TeamId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="BuildingId" class="form-label">Select Building</label>
        <select asp-for="BuildingId" class="form-control custom-select">
            <option value="">Select a building</option>
            @foreach (var building in Model.buildings)
            {
                <option value="@building.Id">@building.Name</option>
            }
        </select>
        <span asp-validation-for="BuildingId" class="text-danger"></span>
    </div>
    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-success btn-sm">Добави свършена работа</button>
        <a asp-action="All" class="btn btn-secondary">Списъка със свършена работа</a>
        <a asp-controller="Home" asp-action="index" class="btn btn-secondary">Начална страница</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
