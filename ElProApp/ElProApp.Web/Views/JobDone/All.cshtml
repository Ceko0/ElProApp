@using ElProApp.Web.Models.JobDone
@model ICollection<JobDoneViewModel>
@{
    ViewData["Title"] = "Всички изпълнени задачи";
}

<div class="container mt-4">
    <h1 class="display-4 text-center">Списък с изпълнени свършени работи</h1>

    <table class="table table-striped mt-4">
        <thead>
            <tr>
                <th>Име</th>
                <th>Работа</th>
                <th>Екип</th>
                <th>Сграда</th>
                <th>Количество</th>
                <th>Сграда</th>
                <th>Дни за изпълнение</th>               
            </tr>
        </thead>
        <tbody>
            @foreach (var jobDone in Model)
            {
                <tr>
                    <td>@jobDone.Name</td>
                    <td>@jobDone.Job.Name</td>
                    <td>@jobDone.Team.Name</td>
                    <td>@jobDone.Building.Name</td>
                    <td>@jobDone.quantity</td>
                    <td>@jobDone.Building.Name</td>
                    <td>@jobDone.DaysForJob</td>                    
                </tr>
            }
        </tbody>
    </table>
    <div class="d-flex justify-content-between">
        <a asp-area="" asp-controller="JobDone" asp-action="Add" class="btn btn-success">Добави свършена работа</a>
        <a asp-controller="Home" asp-action="index" class="btn btn-secondary">Начална страница</a>
    </div>
</div>