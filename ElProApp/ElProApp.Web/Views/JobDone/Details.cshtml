@using ElProApp.Web.Models.JobDone
@model JobDoneViewModel

<div class="container mt-4">
    <h1 class="display-4 text-center">Детайли за задача: @Model.Id</h1>

    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">Основна информация</h5>
            <p><strong>Количество:</strong> @Model.quantity</p>
            <p><strong>Дни за изпълнение:</strong> @Model.DaysForJob</p>
            <p><strong>Работа:</strong> @Model.Job.Name</p>

            <h5 class="card-title mt-3">Екипи</h5>
            @if ( Model.TeamsDoTheJob !=null && Model.TeamsDoTheJob.Any())
            {
                <ul class="list-group">
                    @foreach (var team in Model.TeamsDoTheJob)
                    {
                        <li class="list-group-item">@team.Team.Name</li>
                    }
                </ul>
            }
            else
            {
                <p>Няма свързани екипи с тази задача.</p>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Редактиране</a>
        <a asp-action="All" class="btn btn-secondary">Обратно към всички</a>
    </div>
</div>