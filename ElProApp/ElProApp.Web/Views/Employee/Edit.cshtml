@using ElProApp.Web.Models.Employee
@model EmployeeEditInputModel
@{
    ViewData["Title"] = "Редактиране на информация за служител";
}

<div class="text-center">
    <h1 class="display-4">Редактиране на информация за служител</h1>
</div>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h3>@Model.FirstName @Model.LastName</h3>
            <hr />
                       
            <form asp-action="Edit" method="post">
                <dl class="row">
                    <dt class="col-sm-3">Име:</dt>
                    <dd class="col-sm-9">
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                    </dd>

                    <dt class="col-sm-3">Фамилия:</dt>
                    <dd class="col-sm-9">
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                    </dd>

                    <dt class="col-sm-3">Заплата:</dt>
                    <dd class="col-sm-9">
                        @Html.EditorFor(model => model.Wages, new { htmlAttributes = new { @class = "form-control" } })
                    </dd>
                </dl>
                               
                <div class="d-flex justify-content-between mt-3">
                    <button type="submit" class="btn btn-success">Запази</button>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Отказ</a>
                </div>
            </form>
        </div>
    </div>
</div>
