@using ElProApp.Web.Models.Employee
@model EmployeeInputModel
@{
    ViewData["Title"] = "Добави служител";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Add" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" placeholder="Име" />
                <label asp-for="Name">Име</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="LastName" class="form-control" placeholder="Фамилия" />
                <label asp-for="LastName">Фамилия</label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Wages" type="number" step="0.01" class="form-control" placeholder="Заплата" />
                <label asp-for="Wages">Дневно възнаграждение</label>
                <span asp-validation-for="Wages" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success btn-sm">Добави служител</button>
                <a asp-action="All" class="btn btn-secondary">Списъка с служители</a>
                <a asp-controller="Home" asp-action="index" class="btn btn-secondary">Начална страница</a>
            </div>
        </form>        
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
