@using ElProApp.Web.Models.Team
@model TeamEditInputModel

@{
    ViewData["Title"] = "Редактиране на екип";
}

<div class="container mt-4">
    <h1 class="display-4 text-center">Редактиране на екип</h1>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Обекти, свързани с екипа</label>
            <select asp-for="BuildingWithTeam" asp-items="@(new SelectList(Model.BuildingWithTeam, "Id", "BuildingName"))" multiple="multiple" class="form-control">
            </select>
            <span asp-validation-for="BuildingWithTeam" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Свършени задачи</label>
            <select asp-for="JobsDoneByTeam" asp-items="@(new SelectList(Model.JobsDoneByTeam, "Id", "JobName"))" multiple="multiple" class="form-control">
            </select>
            <span asp-validation-for="JobsDoneByTeam" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Служители в екипа</label>
            <select asp-for="EmployeesInTeam" asp-items="@(new SelectList(Model.EmployeesInTeam, "Id", "EmployeeName"))" multiple="multiple" class="form-control">
            </select>
            <span asp-validation-for="EmployeesInTeam" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Запази промените</button>
    </form>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Назад към списъка с екипи</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}