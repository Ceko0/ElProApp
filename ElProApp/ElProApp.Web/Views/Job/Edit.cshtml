@using ElProApp.Web.Models.Job
@model JobEditInputModel

@{
    ViewData["Title"] = "Редактиране на работа";
}

<div class="text-center">
    <h1 class="display-4">Редактиране на работа</h1>
</div>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Edit" method="post">
                <input asp-for="Id" type="hidden" />
                
                <div class="form-group">
                    <label asp-for="Name" class="form-label">Име:</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="form-label">Цена:</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-warning">Запази</button>
                    <a asp-action="All" asp-route-id="@Model.Id" class="btn btn-secondary">Списъка с работа</a>
                    <a asp-controller="Home" asp-action="index" class="btn btn-secondary">Начална страница</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
