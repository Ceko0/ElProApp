@using ElProApp.Web.Models.Job
@model JobInputModel

<div class="container mt-4">
    <h1 class="display-4 text-center">
        @if (Model.Id == Guid.Empty)
        {
            <text>Създаване на нова дейност</text>
        }
        else
        {
            <text>Редактиране на дейност - @Model.Name</text>
        }
    </h1>

    <form asp-action="Save" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Name" class="control-label">Име на дейността</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="control-label">Цена</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Запази</button>
    </form>

    <div class="mt-3">
        <a asp-action="All" class="btn btn-secondary">Обратно към списъка с дейности</a>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
