@using ElProApp.Web.Models.Job
@model IEnumerable<JobViewModel>

<h1>All Jobs</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                <td>@job.Name</td>
                <td>@job.Price.ToString("F2")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@job.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@job.Id">Edit</a> |
                    <form asp-action="SoftDelete" asp-route-id="@job.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-link">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Add" class="btn btn-primary">Add New Job</a>
